<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0e294e">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="-15dp"
                android:src="@drawable/backgroup_popup" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_add"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_alignParentStart="false"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="0dp"
                    android:src="@drawable/home_center_button_bg" />

                <ToggleButton
                    android:id="@+id/home"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="52dp"
                    android:background="@drawable/togglebutton_dailywater"
                    android:checked="true"
                    android:padding="4dp"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/scan"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="52dp"
                    android:layout_toRightOf="@+id/home"
                    android:background="@drawable/togglebutton_history"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/perfil"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="53dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/togglebutton_setting"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/tgbtn_weight"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="52dp"
                    android:layout_marginRight="25dp"
                    android:layout_toLeftOf="@+id/perfil"
                    android:background="@drawable/togglebutton_weight"
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>
